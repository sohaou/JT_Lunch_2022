		if(divn=='sd1'){$("#sd1").hide(); $("#sd1_c").hide(); $("select[name='sd1']").val("").prop("selected",true); sideDish--;}
		else if(divn=='sd2'){$("#sd2").hide(); $("#sd2_c").hide(); $("select[name='sd2']").val("").prop("selected",true); sideDish--;}
