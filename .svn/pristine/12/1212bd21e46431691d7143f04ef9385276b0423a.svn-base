<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="login">

     <select id="selectUserById" resultType="egovframework.jtLunch.cmmn.security.DTO.CustomUserDetails">
        <![CDATA[
            SELECT
                user_id,
                user_pw,
                user_name,
                user_tel,
                user_auth,
                enabled,
                access_date,
                join_date
            FROM
                jt_users
            WHERE
                user_id=#{loginId}
        ]]>
    </select>
    
    <update id="updateFailureCount">
		<![CDATA[
			UPDATE
				jt_users
			SET
				FAILURE_CNT = FAILURE_CNT + 1
			WHERE
				user_id = #{loginId}
		]]>
	</update>
	
	<select id="checkFailureCount" resultType="Integer">
		<![CDATA[
			SELECT
				FAILURE_CNT
			FROM
				jt_users
			WHERE
				user_id=#{loginId}
		]]>
	</select>
	
	<update id="updateUnenabled">
		<![CDATA[
			UPDATE
				jt_users
			SET
				ENABLED = false
			WHERE
				user_id = #{loginId}
		]]>
	</update>
	
	<update id="updateFailureCountReset">
		<![CDATA[
			UPDATE
				jt_users
			SET
				FAILURE_CNT = 0
			WHERE
				user_id = #{loginId}
		]]>
	</update>
	
	<update id="updateAccessDate">
		<![CDATA[
			UPDATE
				jt_users
			SET
				ACCESS_DATE = SYSDATE()
			WHERE
				user_id = #{loginId}
		]]>
	</update>
	
	<select id="selectAuth" resultType="egovframework.jtLunch.cmmn.security.DTO.CustomUserDetails">
		<![CDATA[
			SELECT
                user_auth,
            FROM
            	jt_users
            WHERE
            	user_id = #{loginId}
		]]>
	</select>
</mapper>